{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Index",
      "preLaunchTask": "tsc",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/index.ts",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current",
      "preLaunchTask": "tsc",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}